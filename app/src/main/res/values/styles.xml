<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="homeAsUpIndicator">@drawable/abc_ic_ab_back_mtrl_am_alpha</item>
        <item name="drawerArrowStyle">@style/SaferTaxi.DrawerArrowStyle</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/Nextperience.Button</item>
        <item name="android:windowBackground">@android:color/white</item>


    </style>

    <style name="Nextperience.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">#212121</item>
        <item name="android:textColor">@android:color/white</item>

    </style>

    <style name="SaferTaxi.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@color/colorPrimary</item>
    </style>

    <style name="ToolBarStyle">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/SaferTaxi.ActionBarThemeOverlay</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="SaferTaxi.ActionBarThemeOverlay" parent="@style/ThemeOverlay.AppCompat.Light">
        <!-- THIS is where you can color the arrow! -->
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/background_light</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="Pisano.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Pisano.ActionBar.SubTitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DetailTitleStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/detail_view_title_textSize</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
